@model IEnumerable<MVC_DB_Demo.Models.Enrollment_details>

@{
    ViewBag.Title = "Index";
}

<h2>Enrollment details</h2>
@section Menubar
{
    @Html.ActionLink("Home", "Index", "HomePage", new { area = "" }, new { @class = "navbar-brand" })
    @Html.ActionLink("Student details", "Index", "Student_VMHSS", new { area = "" }, new { @class = "navbar-brand" })
    @Html.ActionLink("Course details", "Index", "Course_details", new { area = "" }, new { @class = "navbar-brand" })
    @Html.ActionLink("Enrollment details", "Index", "Enrollment_details", new { area = "" }, new { @class = "navbar-brand" })
}
<p>
    @Html.ActionLink("Add new enrollment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course_details.CName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student_VMHSS.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course_details.CName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_VMHSS.FirstName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.eId }) |
                @Html.ActionLink("Details", "Details", new { id = item.eId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.eId })
            </td>
        </tr>
    }

</table>
